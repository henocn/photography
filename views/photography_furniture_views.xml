<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_photography_furniture_list" model="ir.ui.view">
            <field name="name">photography.furniture.list</field>
            <field name="model">photography.furniture</field>
            <field name="arch" type="xml">
                <list string="Les meubles photographiques">
                    <field name="image" widget="image" width="50" height="50" />
                    <field name="name" />
                    <field name="furniture_type" widget="statelist" />
                    <field name="location" />
                    <field name="quantity" sum="Total" />
                    <field name="description" optional="show" />
                </list>
            </field>
        </record>
        
        <!-- Vue formulaire (form) -->
        <record id="view_photography_furniture_form" model="ir.ui.view">
            <field name="name">photography.furniture.form</field>
            <field name="model">photography.furniture</field>
            <field name="arch" type="xml">
                <form string="Meubles photographiques">
                    <sheet>
                        <div class="oe_title">
                            <field name="image" widget="image" class="oe_avatar"
                            options="{'size': [300, 300]}" />
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="location" />
                                <field name="furniture_type" widget="statelist" />
                                <field name="quantity" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>