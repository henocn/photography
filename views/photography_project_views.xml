<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue liste -->
    <record id="view_photography_project_tree" model="ir.ui.view">
        <field name="name">photography.project.tree</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <tree string="Photography Projects">
                <field name="name" />
                <field name="client_id" />
                <field name="shooting_date" />
                <field name="layout_plan" />
                <field name="user_id" string="Assigned To" />
            </tree>
        </field>
    </record>

    <!-- Vue formulaire (Form View) -->
    <record id="view_photography_project_form" model="ir.ui.view">
        <field name="name">photography.project.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Photography Project">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="client_id" />
                            <field name="shooting_date" />
                            <field name="layout_plan" />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="description" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Furniture">
                            <field name="furniture_ids">
                                <tree editable="bottom">
                                    <field name="furniture_type" />
                                    <field name="quantity" />
                                    <field name="description" />
                                </tree>
                            </field>
                        </page>

                        <page string="Equipment">
                            <field name="equipment_ids">
                                <tree editable="bottom">
                                    <field name="equipment_type" />
                                    <field name="quantity" />
                                    <field name="description" />
                                </tree>
                            </field>
                        </page>

                        <page string="Media">
                            <field name="media_ids">
                                <tree editable="bottom">
                                    <field name="media_file" widget="image" />
                                    <field name="description" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>