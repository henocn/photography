<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_photography_media_list" model="ir.ui.view">
            <field name="name">photography.media.list</field>
            <field name="model">photography.media</field>
            <field name="arch" type="xml">
                <list string="Les media dans les projets photographiques">
                    <field name="media_file" widget="image" options="{'size': [128, 128]}" />
                    <field name="project_id" />
                    <field name="description" />
                </list>
            </field>
        </record>

        <!-- Vue formulaire (form) -->
        <record id="view_photography_media_form" model="ir.ui.view">
            <field name="name">photography.media.form</field>
            <field name="model">photography.media</field>
            <field name="arch" type="xml">
                <form string="MÃ©dia de photographie">
                    <sheet>
                        <group>
                            <field name="project_id" />
                            <field name="media_file" height="250" width="250" widget="image" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>