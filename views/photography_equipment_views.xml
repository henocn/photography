<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_photography_equipment_list" model="ir.ui.view">
            <field name="name">photography.equipment.list</field>
            <field name="model">photography.equipment</field>
            <field name="arch" type="xml">
                <list string="Liste des Ã©quipements">
                    <field name="image" widget="image" width="50" height="50" />
                    <field name="name" />
                    <field name="equipment_type" widget="statelist" />
                    <field name="location" />
                    <field name="quantity" sum="Total" />
                    <field name="description" optional="show" />
                </list>
            </field>
        </record>

        <!-- Vue formulaire (form) -->
        <record id="view_photography_equipment_form" model="ir.ui.view">
            <field name="name">photography.equipment.form</field>
            <field name="model">photography.equipment</field>
            <field name="arch" type="xml">
                <form string="Equipment de photographie">
                    <sheet>
                        <div class="oe_title">
                            <field name="name" />
                            <field name="image" widget="image" class="oe_avatar"
                                options="{'size': [300, 300]}" />
                        </div>
                        <group>
                            <group>
                                <field name="equipment_state" widget="statelist" />
                                <field name="quantity" />
                                <field name="adding_date" />
                                <field name="location" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>