<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_rh_tool" model="ir.ui.view">
            <field name="name">rh.tool.list</field>
            <field name="model">rh.tool</field>
            <field name="arch" type="xml">
                <list string="PListe des Outils">
                    <field name="image" widget="image" height="50" width="50" />
                    <field name="name" />
                    <field name="tool_type" />
                    <field name="available_quantity" />
                    <field name="caracteristics" />
                </list>
            </field>
        </record>


        <record id="view_rh_tool_form" model="ir.ui.view">
            <field name="name">rh.tool.form</field>
            <field name="model">rh.tool</field>
            <field name="arch" type="xml">
                <form string="Outil">

                    <sheet>
                        <group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar" />
                            </group>
                            <group>
                                <field name="name" />
                                <field name="tool_type" />
                                <field name="available_quantity" />
                                <field name="caracteristics" />
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>

        </record>

    </data>

</odoo>